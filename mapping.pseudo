

// Patient

let P = csv.patient

fhir.Patient = {

    identifier: [{
        value: P.id
    }],

    name: [{
        given: [P.first_name],
        family: P.last_name
    }],

    gender: MATCH(P.sex) {
        case "m": "male",
        case "f": "female",
        case "w": "female"
    },

    birthDate: DATE(P.date_of_birth),

    address: [{
        line: [P.street],
        postalCode: P.zip,
        city: P.city
    }]
}


